<PartialBlock xmlns="clr-namespace:A2v10.Xaml;assembly=A2v10.Xaml">
	<Button Icon="Bell" Badge="{Bind Root.$Badge}">
		<Button.DropDown>
			<DropDownMenu>
				<MenuItem Icon="Access" Content="Access"/>
				<MenuItem Icon="Account"  Content="Account"/>
				<MenuItem Icon="AddressBook"  Content="AddressBook"/>
				<MenuItem Icon="Approve"/>
				<MenuItem Icon="Reload" Command="{BindCmd Reload}"/>
			</DropDownMenu>
		</Button.DropDown>
	</Button>
	<TextBox Width="10rem"/>
	<Button Icon="ExportExcel">
		<Button.DropDown>
			<DropDownMenu Separate="True" Direction="DownLeft">
				<List Margin=".25rem" Width="20rem" Height="80vh">
					<ListItem Icon="Dashboard" Content="Dashboard" Command="{BindCmd Reload}"/>
					<ListItem Icon="DashboardOutline" Content="Dashboard"/>
					<ListItem Icon="Database" Content="Dashboard"/>
					<ListItem Icon="Dashboard" Content="Dashboard"/>
					<ListItem Icon="Dashboard" Content="Dashboard" Header="Header" Footer="Footer"/>
					<ListItemSimple Icon="BankAccount" Content="BankAccount"/>
				</List>
			</DropDownMenu>
		</Button.DropDown>
	</Button>
	<Button Content="Text"  Icon="Rename" Badge="5"
			Command="{BindCmd Execute, CommandName=showPane}"/>
</PartialBlock>
