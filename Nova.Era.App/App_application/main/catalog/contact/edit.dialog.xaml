<Dialog xmlns="clr-namespace:A2v10.Xaml;assembly=A2v10.Xaml"
		Title="{Bind Contact.$Id, Format='@[Contact] [{0}]'}">
	<Dialog.Buttons>
		<Button Style="Primary" Content="@[SaveAndClose]" 
				Command="{BindCmd SaveAndClose, ValidRequired=True}"/>
		<Button Content="@[Cancel]" Command="{BindCmd Close}"/>
	</Dialog.Buttons>
	<Grid Columns="1*,1*,1*">
		<TextBox Grid.ColSpan="3" Label="@[PersonName]" Value="{Bind Contact.Name}" TabIndex="1"/>
		<TextBox Grid.ColSpan="3" Label="@[Position]" Value="{Bind Contact.Position}"/>
		<TextBox Grid.ColSpan="3" Label="@[Memo]" Value="{Bind Contact.Memo}" Multiline="True" Rows="3"/>
	</Grid>
</Dialog>